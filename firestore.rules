rules_version = '2';

// Deployment trigger: 2026-02-02T22:50:00Z - Supporting root-level queries and stabilizing SDK state

service cloud.firestore {
  match /databases/{database}/documents {
    
    // helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isTenantMember(tenantId) {
      return isSignedIn() && exists(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid));
    }

    // ROOT LEVEL RULES
    // These satisfy the simplified queries used in the dashboard pages (e.g., collection(db, 'users'))
    // In a full production app, these would be scoped or use collection group rules with ownership checks.
    match /users/{userId} {
      allow read, write: if isSignedIn();
    }
    match /resources/{resourceId} {
      allow read, write: if isSignedIn();
    }
    match /entitlements/{entitlementId} {
      allow read, write: if isSignedIn();
    }
    match /assignments/{assignmentId} {
      allow read, write: if isSignedIn();
    }
    match /auditEvents/{eventId} {
      allow read, write: if isSignedIn();
    }
    match /tenants/{tenantId} {
      allow read, write: if isSignedIn();
    }

    // COLLECTION GROUP RULES
    match /{path=**}/members/{uid} {
      allow list, get: if isSignedIn() && (request.auth.uid == uid || request.auth.uid == resource.data.userId);
    }

    // NESTED TENANT RULES (Legacy/Future-proofing)
    match /tenants/{tenantId} {
      match /members/{uid} {
        allow read, write: if isSignedIn();
      }
      match /users/{userId} {
        allow read, write: if isSignedIn();
      }
      match /resources/{resourceId} {
        allow read, write: if isSignedIn();
      }
      match /entitlements/{entitlementId} {
        allow read, write: if isSignedIn();
      }
      match /assignments/{assignmentId} {
        allow read, write: if isSignedIn();
      }
      match /auditEvents/{eventId} {
        allow read, write: if isSignedIn();
      }
    }

    // PLATFORM RULES
    match /platformUsers/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
    }
    
    // GLOBAL DEFAULT
    match /{document=**} {
      allow read, write: if false;
    }
  }
}