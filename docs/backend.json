
{
  "entities": {
    "Tenant": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Tenant",
      "type": "object",
      "description": "Represents a tenant in the system, isolating data for different organizations or customers.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the tenant."
        },
        "name": {
          "type": "string",
          "description": "The name of the tenant."
        },
        "slug": {
          "type": "string",
          "description": "A URL-friendly slug for the tenant."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the tenant was created.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "name",
        "slug",
        "createdAt"
      ]
    },
    "TenantMember": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "TenantMember",
      "type": "object",
      "description": "Represents a user's membership within a tenant, including their role and status.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the tenant member."
        },
        "tenantId": {
          "type": "string",
          "description": "Reference to Tenant. (Relationship: Tenant 1:N TenantMember)"
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N TenantMember)"
        },
        "role": {
          "type": "string",
          "description": "The role of the member within the tenant (e.g., tenantOwner, admin, editor, viewer)."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the member was added to the tenant.",
          "format": "date-time"
        },
        "invitedBy": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N TenantMember) The user who invited this member."
        },
        "status": {
          "type": "string",
          "description": "The status of the membership (e.g., active, invited)."
        }
      },
      "required": [
        "id",
        "tenantId",
        "userId",
        "role",
        "createdAt",
        "status"
      ]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user synchronized from LDAP or a similar directory service.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user within the tenant."
        },
        "tenantId": {
          "type": "string",
          "description": "Reference to Tenant. (Relationship: Tenant 1:N User)"
        },
        "externalId": {
          "type": "string",
          "description": "External identifier from the LDAP directory."
        },
        "displayName": {
          "type": "string",
          "description": "The display name of the user."
        },
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        },
        "department": {
          "type": "string",
          "description": "The department the user belongs to."
        },
        "title": {
          "type": "string",
          "description": "The job title of the user."
        },
        "enabled": {
          "type": "boolean",
          "description": "Indicates whether the user is enabled."
        },
        "lastSyncedAt": {
          "type": "string",
          "description": "Timestamp indicating when the user was last synchronized from LDAP.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "tenantId",
        "externalId",
        "displayName",
        "email",
        "enabled"
      ]
    },
    "Resource": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Resource",
      "type": "object",
      "description": "Represents a resource within a tenant, such as a SaaS application or internal tool.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the resource."
        },
        "tenantId": {
          "type": "string",
          "description": "Reference to Tenant. (Relationship: Tenant 1:N Resource)"
        },
        "name": {
          "type": "string",
          "description": "The name of the resource."
        },
        "type": {
          "type": "string",
          "enum": ["SaaS", "OnPrem", "Private Cloud", "Webshop", "IoT", "Andere"],
          "description": "The type of resource."
        },
        "owner": {
          "type": "string",
          "description": "The owner of the resource."
        },
        "url": {
          "type": "string",
          "description": "The URL of the resource.",
          "format": "uri"
        },
        "documentationUrl": {
          "type": "string",
          "description": "Link to the internal documentation for this resource."
        },
        "passwordManagerUrl": {
          "type": "string",
          "description": "Link to the shared password manager vault for this resource."
        },
        "criticality": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "The criticality level of the resource."
        },
        "notes": {
          "type": "string",
          "description": "Additional notes about the resource."
        }
      },
      "required": [
        "id",
        "tenantId",
        "name",
        "type",
        "owner",
        "criticality"
      ]
    },
    "Entitlement": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Entitlement",
      "type": "object",
      "description": "Represents an entitlement for a resource, defining the access level or permissions with support for hierarchical inheritance.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the entitlement."
        },
        "tenantId": {
          "type": "string",
          "description": "Reference to Tenant. (Relationship: Tenant 1:N Entitlement)"
        },
        "resourceId": {
          "type": "string",
          "description": "Reference to Resource. (Relationship: Resource 1:N Entitlement)"
        },
        "parentId": {
          "type": "string",
          "description": "Reference to another Entitlement within the same resource to build a hierarchy."
        },
        "name": {
          "type": "string",
          "description": "The name of the entitlement (e.g., Viewer, Editor, Admin)."
        },
        "description": {
          "type": "string",
          "description": "A description of the entitlement."
        },
        "riskLevel": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "The risk level associated with the entitlement."
        }
      },
      "required": [
        "id",
        "tenantId",
        "resourceId",
        "name",
        "riskLevel"
      ]
    },
    "Assignment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Assignment",
      "type": "object",
      "description": "Represents the assignment of an entitlement to a user for a specific resource.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the assignment."
        },
        "tenantId": {
          "type": "string",
          "description": "Reference to Tenant. (Relationship: Tenant 1:N Assignment)"
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N Assignment)"
        },
        "entitlementId": {
          "type": "string",
          "description": "Reference to Entitlement. (Relationship: Entitlement 1:N Assignment)"
        },
        "originGroupId": {
          "type": "string",
          "description": "If this assignment was granted via a group, the ID of that group."
        },
        "status": {
          "type": "string",
          "description": "The status of the assignment (e.g., active, requested, removed)."
        },
        "grantedBy": {
          "type": "string",
          "description": "The user who granted the assignment."
        },
        "grantedAt": {
          "type": "string",
          "description": "Timestamp indicating when the assignment was granted.",
          "format": "date-time"
        },
        "ticketRef": {
          "type": "string",
          "description": "Reference to a ticket or request associated with the assignment."
        },
        "validUntil": {
          "type": "string",
          "description": "Timestamp indicating when the assignment is valid until.",
          "format": "date-time"
        },
        "notes": {
          "type": "string",
          "description": "Additional notes about the assignment."
        }
      },
      "required": [
        "id",
        "tenantId",
        "userId",
        "entitlementId",
        "status"
      ]
    },
    "AssignmentGroup": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AssignmentGroup",
      "type": "object",
      "description": "Represents a group of assignments that can be applied to users collectively.",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "entitlementIds": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of entitlement IDs that members of this group receive."
        },
        "userIds": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of user IDs who are members of this group."
        }
      },
      "required": ["id", "tenantId", "name"]
    },
    "AuditEvent": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AuditEvent",
      "type": "object",
      "description": "Represents an audit event, logging changes to resources, entitlements, and assignments.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the audit event."
        },
        "tenantId": {
          "type": "string",
          "description": "Reference to Tenant. (Relationship: Tenant 1:N AuditEvent)"
        },
        "actorUid": {
          "type": "string",
          "description": "The user who performed the action."
        },
        "action": {
          "type": "string",
          "description": "The action performed (e.g., create, update, delete)."
        },
        "entityType": {
          "type": "string",
          "description": "The type of entity that was modified (e.g., resource, entitlement, assignment)."
        },
        "entityId": {
          "type": "string",
          "description": "The ID of the entity that was modified."
        },
        "before": {
          "type": "string",
          "description": "The state of the entity before the change (JSON string)."
        },
        "after": {
          "type": "string",
          "description": "The state of the entity after the change (JSON string)."
        },
        "timestamp": {
          "type": "string",
          "description": "Timestamp indicating when the event occurred.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "tenantId",
        "actorUid",
        "action",
        "entityType",
        "entityId",
        "timestamp"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "tenants/{tenantId}",
        "definition": {
          "entityName": "Tenant",
          "schema": { "$ref": "#/backend/entities/Tenant" },
          "description": "Stores tenant-specific data."
        }
      },
      {
        "path": "tenants/{tenantId}/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Stores user data."
        }
      },
      {
        "path": "tenants/{tenantId}/resources/{resourceId}",
        "definition": {
          "entityName": "Resource",
          "schema": { "$ref": "#/backend/entities/Resource" },
          "description": "Stores resource data."
        }
      },
      {
        "path": "tenants/{tenantId}/entitlements/{entitlementId}",
        "definition": {
          "entityName": "Entitlement",
          "schema": { "$ref": "#/backend/entities/Entitlement" },
          "description": "Stores entitlement data."
        }
      },
      {
        "path": "tenants/{tenantId}/assignments/{assignmentId}",
        "definition": {
          "entityName": "Assignment",
          "schema": { "$ref": "#/backend/entities/Assignment" },
          "description": "Stores individual assignment data."
        }
      },
      {
        "path": "tenants/{tenantId}/groups/{groupId}",
        "definition": {
          "entityName": "AssignmentGroup",
          "schema": { "$ref": "#/backend/entities/AssignmentGroup" },
          "description": "Stores assignment group data."
        }
      },
      {
        "path": "tenants/{tenantId}/auditEvents/{eventId}",
        "definition": {
          "entityName": "AuditEvent",
          "schema": { "$ref": "#/backend/entities/AuditEvent" },
          "description": "Stores audit events."
        }
      }
    ]
  }
}
