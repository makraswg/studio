rules_version = '2';

// Deployment trigger: 2026-02-02T23:15:00Z - Hardened root query stability and collection group isolation

service cloud.firestore {
  match /databases/{database}/documents {
    
    // helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isTenantMember(tenantId) {
      return isSignedIn() && exists(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid));
    }

    // COLLECTION GROUP RULES (Priority)
    // Allows users to list memberships where they are the owner
    match /{path=**}/members/{uid} {
      allow list, get: if isSignedIn() && (request.auth.uid == uid);
    }

    // ROOT LEVEL RULES
    // These authorize queries directly on top-level collections (e.g., collection(db, 'users'))
    match /users/{userId} {
      allow read, write: if isSignedIn();
    }
    match /resources/{resourceId} {
      allow read, write: if isSignedIn();
    }
    match /entitlements/{entitlementId} {
      allow read, write: if isSignedIn();
    }
    match /assignments/{assignmentId} {
      allow read, write: if isSignedIn();
    }
    match /auditEvents/{eventId} {
      allow read, write: if isSignedIn();
    }
    match /tenants/{tenantId} {
      allow read, write: if isSignedIn();
    }

    // NESTED TENANT RULES (Isolation)
    match /tenants/{tenantId} {
      match /members/{uid} {
        allow read, write: if isSignedIn();
      }
      match /users/{userId} {
        allow read, write: if isSignedIn();
      }
      match /resources/{resourceId} {
        allow read, write: if isSignedIn();
      }
      match /entitlements/{entitlementId} {
        allow read, write: if isSignedIn();
      }
      match /assignments/{assignmentId} {
        allow read, write: if isSignedIn();
      }
      match /auditEvents/{eventId} {
        allow read, write: if isSignedIn();
      }
    }

    // PLATFORM RULES
    match /platformUsers/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
    }
    
    // GLOBAL DEFAULT
    match /{document=**} {
      allow read, write: if false;
    }
  }
}